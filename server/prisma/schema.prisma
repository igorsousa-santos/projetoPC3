// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

// DEVELOPMENT: SQLite (local)
// PRODUCTION: PostgreSQL (Vercel)
// To switch: uncomment the PostgreSQL block and comment the SQLite block
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
  id             Int      @id @default(autoincrement())
  email          String?  @unique
  name           String?
  spotifyId      String?  @unique
  lastfmUsername String?  @unique
  image          String?
  createdAt      DateTime @default(now())
  playlists      Playlist[]
}

model Playlist {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  // SQLite: String (JSON stringified)
  // PostgreSQL: Json (native)
  // Change to `Json` when deploying to Vercel
  tracks      String   @default("[]")
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
